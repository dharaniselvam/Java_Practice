import java.util.Scanner;
//returns number of repetitive integers in an array
public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        int n = s.nextInt();
        int search = s.nextInt();
        int count =0;
        int arr[] = new int[n];
        for(int i=0;i<n;i++)
            arr[i]=s.nextInt();
        for(int i=0;i<n;i++){
            if(arr[i]==search)
                count = count+1;
        }
        System.out.println(count);
    }
}
